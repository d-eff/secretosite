---
pagination:
  data: secretSanta.players
  size: 1
  alias: player
permalink: "player/{{ player.id }}/index.html"
---

<h1>{{ player.name }}</h1>

{% set given = secretSanta.gifts | find("from", player.id) | list %}
{% set received = secretSanta.gifts | find("to", player.id) | list %}

<h2>Years Participated</h2>
<ul>
  {% for gift in given %}
    <li>{{ gift.year }}</li>
  {% endfor %}
</ul>

<h2>Gifts Given</h2>
<ul>
{% for gift in given %}
  <li>
    {{ gift.year }} →
    <a href="/gift/{{ gift.id }}/">
      {{ gift.to }}:
      {{ gift.gift }}
    </a>
  </li>
{% endfor %}
</ul>

<h2>Gifts Received</h2>
<ul>
{% for gift in received %}
  <li>
    {{ gift.year }} ←
    <a href="/gift/{{ gift.id }}/">
      {{ gift.from }}:
      {{ gift.gift }}
    </a>
  </li>
{% endfor %}
</ul>

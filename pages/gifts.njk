<div id="giftsListPage" class="page">
  <h1>Every single gift that has ever been given</h1>
  <h4 class="comment">Except for the ones I missed.</h4>
  <div class="content">
    {% for year, items in secretSanta.gifts | groupby("year") %}
      <div class="content">
        <h2><a class="yearLink" href="{{ '/year/' + year | url }}">{{ year }}</a></h2>
        <ul>
        {% for gift in items %}
          <li>
            <a href="{{ '/gift/' + gift.id | url }}">
              {{ gift.gift }}
              from {{ gift.from }}
              to {{ gift.to }}
            </a>
          </li>
        {% endfor %}
        </ul>
      </div>
    {% endfor %}
  </div>
</div>